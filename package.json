{
  "name": "vibe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:staging": "dotenv -e .env.staging -- next dev --turbopack",
    "build": "prisma generate && next build",
    "build:staging": "dotenv -e .env.staging -- npm run build",
    "build:prod": "npm run build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "db:migrate:staging": "dotenv -e .env.staging -- npx prisma migrate deploy",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:studio:dev": "dotenv -e .env.development -- npx prisma studio",
    "db:studio:staging": "dotenv -e .env.staging -- npx prisma studio",
    "db:studio:prod": "npx prisma studio",
    "db:push:dev": "dotenv -e .env.development -- npx prisma db push",
    "db:push:staging": "dotenv -e .env.staging -- npx prisma db push",
    "db:generate": "npx prisma generate",
    "deploy:staging": "echo '⚠️  Use GitHub Actions for deployment. See docs/CI-CD.md'",
    "deploy:prod": "echo '⚠️  Use GitHub Actions for deployment. See docs/CI-CD.md'",
    "setup:env": "bash scripts/setup-environment.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-query": "^5.81.5",
    "@trpc/client": "^11.4.3",
    "@trpc/next": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "next": "15.3.4",
    "next-auth": "^4.24.11",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "superjson": "^2.2.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^15.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@types/jest": "^29.5.0",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5"
  }
}
